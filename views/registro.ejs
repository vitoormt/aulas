<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="css/estilos.css">
</head>

<body>
    <div class="container">
        <h1 class="text-center">Lista de Atividades</h1>
        <h3 class="text-center">Registro</h3>
        <div class="row">
            <div class="col-sm text-center">
                <form action="" method="post" class="form-control">
                    <div>
                        <div>
                            <label for="signup-name" class="login-email">Nome</label>
                        </div>
                        <div>
                            <input type="text" name="nome" id="" class="form-control" placeholder="">
                        </div>
                    </div>
                    <div>
                        <div>
                            <label for="signup-name" class="login-email">E-mail</label>
                        </div>
                        <div>
                            <input type="email" name="email" id="" class="form-control" placeholder="">
                        </div>
                    </div>
                    <div>
                        <div>
                            <label for="password-input" class="login-senha">Senha</label>
                        </div>
                        <div class="input-group">
                            <input type="password" name="senha" id="senha" class="form-control" placeholder=""><i class="bi bi-eye-fill btn btn-outline-secondary" id="trocar"></i>
                        </div>
                    </div>
                    <div>
                        <div>
                            <label for="password-input" class="login-senha">Confirmação de Senha</label>
                        </div>
                        <div class="input-group">
                            <input type="password" name="senha2" id="senha2" class="form-control" placeholder=""><i class="bi bi-eye-fill btn btn-outline-secondary" id="trocar2"></i>
                        </div>
                    </div>
                    <input type="submit" value="Registro" class="btn btn-secondary botao">
                </form>
                <a href="/login" class="btn btn-secondary botao">Login</a>
                <a href="/" class="btn btn-secondary botao">Início</a>
            </div>
        </div>
    </div>
    <script>
        var verSenha = document.querySelector("#trocar")
        var senha = document.querySelector("#senha")

        var verSenha2 = document.querySelector("#trocar2")
        var senha2 = document.querySelector("#senha2")

        verSenha.addEventListener("click",()=>{
        var tipo = senha.getAttribute("type") === "password" ? "text" : "password"
        senha.setAttribute("type",tipo)
        verSenha.classList.toggle("bi-eye-slash-fill")
        })


        verSenha2.addEventListener("click",()=>{
        var tipo2 = senha2.getAttribute("type") === "password" ? "text" : "password"
        senha2.setAttribute("type",tipo2)
        verSenha2.classList.toggle("bi-eye-slash-fill")
        })



function comparar(){
  if (senha.value != senha2.value){
    senha2.setCustomValidity('As senhas não coincidem')
  }else{
    senha2.setCustomValidity('')
  }
}

senha.onchange = comparar
senha2.onkeyup = comparar
    </script> 
    <script src="js/comparar.js"></script>
</body>

</html>