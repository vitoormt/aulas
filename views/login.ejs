<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!--  -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- bootstrap icones-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css">
    <!-- css personalizado -->
    <link rel="stylesheet" href="css/estilos.css">
</head>
<body>
    <div class="container">
        <h1 class="text-center">Lista de Atividades</h1>
        <h3 class="text-center">Login</h3>
        <div class="row">
            <div class="col-sm text-center">
                <form action="" method="post" class="form-control">
                    <div>
                        <div>
                            <label for="signup-name" class="login-email">E-mail</label>
                        </div>
                        <div>
                            <input type="email" name="email" id="" class="form-control" placeholder="">
                        </div>
                    </div>
                    <div>
                        <div>
                            <label for="password-input" class="login-senha">Senha</label>
                        </div>
                        <div class="input-group">
                            <input type="password" name="senha" id="senha" class="form-control" placeholder=""><i class="bi bi-eye-fill btn btn-outline-secondary" id="troca"></i>
                        </div>
                    </div>
                    <input type="submit" value="Entrar" class="btn btn-secondary botao">
                </form>
                <a href="/registro" class="btn btn-secondary botao">Registrar</a>
                <a href="/" class="btn btn-secondary botao">In√≠cio</a>
            </div>
        </div>
    </div>
    <script>
        var trocaTipo = document.querySelector("#troca")
        var senha = document.querySelector("#senha")

        trocaTipo.addEventListener("click",()=>{
            var tipo = senha.getAttribute("type") === "password" ? "text" : "password"
            senha.setAttribute("type",tipo)
            trocaTipo.classList.toggle("bi-eye-slash-fill")
        })

    </script>
</body>
</html>







